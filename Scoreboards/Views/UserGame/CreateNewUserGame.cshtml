@model Scoreboards.Models.UserGames.NewUserGameModel
<SCRIPT language=Javascript>

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    function disableSubmitBtn() {
        document.getElementById("submitUserGameBtn").disabled = true;
    }
    window.onbeforeunload = disableSubmitBtn;
</SCRIPT>

<div class="page-content new-user-game">
    <div>
        <h1>Create New Game</h1>
    </div>
    <div class="row">
        <form asp-action="AddUserGame" method="post" id="addUserGame" onsubmit="document.getElementById('submitUserGameBtn').disabled">
            <div class="user-game-game-select row"
                 align="center">
                <div class="form-group">
                    <label asp-for="GamePlayedName">Select Game</label>
                    <select asp-for="GamePlayedName"
                            class="form-control"
                            id="GamePlayedName"
                            required>
                        @foreach (var game in Model.GamesList)
                        {
                            <option value="@game.GameName">@game.GameName</option>
                        }
                    </select>
                </div>
            </div>
            <div class="user-game-player col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <fieldset class="user-game-fieldset">
                    <legend class="user-game-legend">Player 1</legend>
                    <div class="">
                        <div class="form-group">
                            <label asp-for="User_01_Id">Select Player 1</label>
                            <select asp-for="User_01_Id"
                                    class="form-control"
                                    id="User_01_Id"
                                    required>
                                @foreach (var user in Model.UsersList)
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="User_01_Team">Player 1 Team</label>
                            <input asp-for="User_01_Team" class="form-control" type="text" placeholder="Player 1 team..." required />
                            <span asp-validation-for="User_01_Team" class="text-danger"></span>
                        </div>
                        <div class="form-group" align="center">
                            <label asp-for="GameScoreUser01">Game Final Score</label>
                            <input asp-for="GameScoreUser01" class="form-control" type="number" min="0" max="500" onkeypress="return isNumberKey(event)" placeholder="Player1 score" required />
                            <span asp-validation-for="GameScoreUser01" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="user-game-player col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <fieldset class="user-game-fieldset">
                    <legend class="user-game-legend">Player 2</legend>
                    <div class="user-game-player">
                        <div class="form-group">
                            <label asp-for="User_02_Id">Select Player 2</label>
                            <select asp-for="User_02_Id"
                                    class="form-control"
                                    id="User_02_Id"
                                    required>
                                @foreach (var user in Model.UsersList)
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="User_02_Team">Player 2 Team</label>
                            <input asp-for="User_02_Team" class="form-control" type="text" placeholder="Player 2 team..." required />
                            <span asp-validation-for="User_02_Team" class="text-danger"></span>
                        </div>
                        <div class="form-group" align="center">
                            <label asp-for="GameScoreUser02">Game Final Score</label>
                            <input asp-for="GameScoreUser02" class="form-control" type="number" min="0" max="500" onkeypress="return isNumberKey(event)" placeholder="Player2 score" required />
                            <span asp-validation-for="GameScoreUser02" class="text-danger"></span>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="row btn-submitUserGame">
                <button type="submit" id="submitUserGameBtn" class="btn">
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}